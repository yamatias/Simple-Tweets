<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PostTweetActivity">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivProfileImage2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ibExit"
        android:background="@drawable/ic_exit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="onExitClick"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/ivProfileImage2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etText"
        android:layout_below="@+id/ibExit"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/ivProfileImage2"
        android:layout_alignEnd="@+id/ivProfileImage2"

        android:hint="What&apos;s happening?" />

    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Tweet"
        android:textColor="@android:color/white"
        android:id="@+id/bnTweet"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/etText"
        android:layout_alignEnd="@+id/etText"
        android:background="@drawable/buttoncolor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="140"
        android:id="@+id/tvCharCount"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bnTweet"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/darker_gray"/>


</RelativeLayout>
